  function validateCaptcha() {
  const captchaInput = document.getElementById('captcha');
  if (captchaInput.value.trim() !== "8") {
    alert("Merci de r√©pondre correctement √† la question anti-robot.");
    captchaInput.focus();
    return false;
  }
  return true;
}
